<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TailorMainActivity"
    android:id="@+id/drawerT"
    tools:openDrawer="end">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationViewT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_drawer_admin"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <soup.neumorphism.NeumorphCardView
            android:id="@+id/toobarCArds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neumorph_shapeType="flat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toolbarIDT"/>

            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/customersBtn"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:neumorph_shapeType="flat">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical">

                            <ImageView
                                android:id="@+id/nImg1"
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_baseline_person_24" />

                            <soup.neumorphism.NeumorphTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/nImg1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:text="Customers"
                                android:textAlignment="center"
                                android:textColor="@color/black" />


                        </RelativeLayout>


                    </soup.neumorphism.NeumorphCardView>


                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/adsBtn"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        app:neumorph_shapeType="flat">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:id="@+id/nImg2"
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_baseline_category_24" />

                            <soup.neumorphism.NeumorphTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/nImg2"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:text="Advertisement"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="13sp" />


                        </RelativeLayout>


                    </soup.neumorphism.NeumorphCardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/ll1">

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/orderTBtnId"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:neumorph_shapeType="flat">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical">

                            <ImageView
                                android:id="@+id/gImg1"
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_baseline_pending_actions_24"
                                app:tint="@color/black" />

                            <soup.neumorphism.NeumorphTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/gImg1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:text="Orders"
                                android:textColor="@color/black"
                                android:textAlignment="center" />


                        </RelativeLayout>


                    </soup.neumorphism.NeumorphCardView>


                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/postAdsBtn"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:neumorph_shapeType="flat">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical">

                            <ImageView
                                android:id="@+id/ggImg1"
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_baseline_add_24"
                                app:tint="@color/black" />

                            <soup.neumorphism.NeumorphTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ggImg1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:text="Post Ad"
                                android:textColor="@color/black"
                                android:textAlignment="center" />


                        </RelativeLayout>


                    </soup.neumorphism.NeumorphCardView>



                </LinearLayout>


            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>



</androidx.drawerlayout.widget.DrawerLayout>