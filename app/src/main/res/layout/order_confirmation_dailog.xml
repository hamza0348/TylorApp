<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <RelativeLayout
        android:id="@+id/ll1earning"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/sureTvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure to confirm?"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerInParent="true"/>


        <soup.neumorphism.NeumorphButton
            android:id="@+id/submitBtnId"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="Confirm"
            android:textColor="#A6000000" />


        <soup.neumorphism.NeumorphButton
            android:id="@+id/cancelBtnId"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="Cancel"
            android:textColor="#A6000000"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/pendingTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your order is in pending\n\n Do you want to cancel the order?"
        android:padding="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_marginTop="20dp" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/dismissBtnId"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="No"
        android:textColor="#A6000000"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/pendingTv"/>


    <soup.neumorphism.NeumorphButton
        android:id="@+id/yesBtnId"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Yes cancel"
        android:textColor="#A6000000"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/pendingTv"/>



</RelativeLayout>